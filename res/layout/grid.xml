<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/gridView" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:numColumns="2"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refresh"
            android:id="@+id/refresh" android:layout_gravity="center_horizontal" android:textStyle="bold"
            android:textSize="25dp" android:onClick="refreshPictures" android:layout_marginBottom="15dp"/>
</LinearLayout>

