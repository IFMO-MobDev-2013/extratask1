<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/space" android:layout_weight="5"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="90">
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/space2" android:layout_weight="10"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageProf1" android:layout_weight="35"
                android:adjustViewBounds="false"/>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/space3" android:layout_weight="10"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageProf2" android:layout_weight="35"
                android:adjustViewBounds="false"/>
        <Space
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/space4" android:layout_weight="10"/>
    </LinearLayout>
    <Space
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/space1" android:layout_weight="5"/>
</LinearLayout>

