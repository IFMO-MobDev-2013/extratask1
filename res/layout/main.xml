<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Яндекс Фотки!"
                android:id="@+id/textView" android:layout_weight="70"
                android:gravity="center"
                android:textSize="25dp"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обновить!"
                android:id="@+id/button" android:singleLine="false" android:clickable="true"
                android:layout_weight="30" android:onClick="updateClick"/>
    </LinearLayout>
    <Space
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:id="@+id/space"/>
    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/gridView"></GridView>
</LinearLayout>